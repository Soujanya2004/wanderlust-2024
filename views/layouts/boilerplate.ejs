    <script>
        const isLoggedIn = <%= isLoggedIn %>;  // Server-side login status
        console.log("Is user logged in?", isLoggedIn);
    
        // Function to show popup
        function showPopup() {
            const popupContainer = document.getElementById("popupContainer");
            const overlay = document.getElementById("overlay");
            popupContainer.style.display = "flex";  // Show popup container
            overlay.style.display = "block"; // Show the overlay (blur effect)
        }

        // Function to close popup
        function closePopup() {
            const overlay = document.getElementById("overlay");
            const popupContainer = document.getElementById("popupContainer");
            overlay.style.display = "none"; // Hide the overlay
            popupContainer.style.display = "none";  // Hide popup container
        }
    
        // Show popup every 30 seconds if the user is not logged in
        if (!isLoggedIn) {
            setInterval(() => {
                showPopup();
            }, 30000); // 30000ms = 30 seconds
        }
    </script>

