<style>
    ::-webkit-scrollbar {
        width: 12px; 
    }

    ::-webkit-scrollbar-track {
        background: #000000; 
    }

    ::-webkit-scrollbar-thumb {
        background: red; 
        border-radius: 10px; 
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #0004fe; 
    }

   
    body {
        scrollbar-width: thin;
        scrollbar-color: red; 
    }
</style>
